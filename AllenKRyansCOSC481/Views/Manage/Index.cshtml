@model AllenKRyansCOSC481.Models.IndexViewModel
@{
    ViewBag.Title = "Account Overview";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change or view your account information</h4>
    <dl class="dl-horizontal">
        <dt>Account Information:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Edit", "ChangeAccountInfo")
            }
            |
            @if (Model.HasPassword)
            {
                @Html.ActionLink("View", "CheckAccountInfo", new { email = Model.Email })
            }
            ]
        </dd>
    </dl>
</div>
<div>
    <hr />
    <h4>View your previous orders</h4>

    <dl class="dl-horizontal">
        <dt>Previous Orders:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("View", "ViewPreviousOrders", new { email = Model.Email })
            }
            ]
        </dd>
    </dl>
</div>