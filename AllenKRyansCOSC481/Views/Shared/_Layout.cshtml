<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/AKR.ico" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Allen K Ryans", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li id="pg6">@Html.ActionLink("Current Orders", "Index", "Orders")</li>
                        }
                        else
                        {
                            <li id="pg1">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li id="pg2">@Html.ActionLink("Order Online", "Index", "OrderOnline")</li>
                            <li id="pg3">@Html.ActionLink("Menu", "Menu", "Home")</li>
                            <li id="pg4">@Html.ActionLink("About", "About", "Home")</li>
                            <li id="pg5">@Html.ActionLink("Cart", "Cart", "OrderOnline")</li> <!-- float right? -->
                        }
                    }
                    else
                    {
                        <li id="pg1">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li id="pg2">@Html.ActionLink("Order Online", "Index", "OrderOnline")</li>
                        <li id="pg3">@Html.ActionLink("Menu", "Menu", "Home")</li>
                        <li id="pg4">@Html.ActionLink("About", "About", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron jumboBckgrnd">
            <img src="~/Images/cropped-cropped-Allen-K-Ryans-Logo-22.gif" alt="Company logo" id="logo" />
            <p class="lead">The Best Chicken & Ribs in Livingston County! 517-518-8736</p>
        </div>
        <div class="bodyAndSidebar">
            <div class="col-md-8">
                <!--Home views here-->
                @RenderBody()
            </div>
            <!-- moved out of index.cshtml-->
            <div class="col-md-4">
                <div>
                    <h3>Like us on Facebook!</h3>
                    <br />
                    <div id="fbind">
                        <div class="fb-page" data-href="https://www.facebook.com/allenkryans" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/allenkryans" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/allenkryans">Allen K. Ryan&#039;s</a></blockquote></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="footer">
        <center>
            <p>@DateTime.Now.Year - Developed by team <a href="https://media.giphy.com/media/11p1apCPqM7WEw/giphy.gif">Eagle</a> from EMU</p>
        </center>
    </footer>

    <script src="~/Scripts/FB_jscode.js"></script>
    <script src="~/Scripts/SiteWide.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
